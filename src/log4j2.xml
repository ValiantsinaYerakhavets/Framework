<configuration>
  <appenders>
    <File name="logFile" fileName="report.log">
        <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%-5p] (%F:%L) - %m%n"/>
    </File>             
  </appenders>

  <loggers>     
    <root level="warn">
       <appender-ref ref="logFile" level="error"/>
    </root>    
  </loggers>
</configuration>